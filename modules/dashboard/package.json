{
    "name": "@a11ygato/dashboard",
    "version": "0.3.0",
    "description": "@a11ygato/dashboard is a visual web interface to consult and monitor accessibility reports",
    "keywords": [
        "a11y",
        "accessibility",
        "pa11y",
        "pally",
        "engine",
        "audit",
        "axe",
        "analysis",
        "report"
    ],
    "license": "GPL-3.0-or-later",
    "repository": "github:Orange-OpenSource/a11ygato-platform",
    "contributors": [
        "Perry Harlock (http://www.phwebs.co.uk/)",
        "Rowan Manning (http://rowanmanning.com/)",
        "Jean Dat <jean.dat@orange.com>"
    ],
    "engines": {
        "node": ">=8"
    },
    "scripts": {
        "lint": "eslint --fix --color --format codeframe .",
        "prebuild": "npm run lint && shx mkdir -p public/",
        "build": "run-p --print-name compile:css:* copy:* compile:js:*",
        "compile:css:app": "lessc --clean-css --autoprefix='last 2 versions' --include-path=node_modules/bootstrap/less/ less/main-app.less public/app.min.css",
        "copy:browser": "shx cp -r browser/{favicon.png,manifest.json} node_modules/bootstrap/fonts public/",
        "copy:vendor": "shx cp -r vendor/prism/* public/",
        "copy:node_modules": "shx cp -r node_modules/{bootstrap-table/dist/bootstrap-table.min.css,promise-polyfill/dist/promise.min.js,jquery/dist/jquery.min.js,ace-builds/src-min-noconflict/{ace.js,theme-xcode.js,mode-javascript.js}} public/",
        "compile:js:bootstrap": "uglifyjs --comments --output public/bootstrap.min.js --compress -- node_modules/bootstrap/js/{alert.js,button.js,dropdown.js,tooltip.js,popover.js,tab.js,modal.js,transition.js,collapse.js}",
        "compile:js:bootstraptable": "uglifyjs --comments --output public/bootstrap-table.min.js --compress -- node_modules/bootstrap-table/dist/{bootstrap-table.min.js,extensions/multiple-sort/bootstrap-table-multiple-sort.min.js}",
        "compile:js:flot": "uglifyjs --comments --output public/flot.min.js --compress -- vendor/flot/{jquery.flot.js,jquery.flot.time.js,jquery.flot.selection.js,jquery.flot.resize.js} browser/graph.js ",
        "compile:js:app": "uglifyjs --comments --output public/app.min.js --compress -- browser/common.js",
        "compile:js:fetch": "uglifyjs --comments --output public/fetch.min.js --compress -- node_modules/whatwg-fetch/fetch.js",
        "compile:js:polyfill": "uglifyjs --comments --output public/polyfills.min.js --compress -- browser/polyfills.js",
        "compile:js:jsbeautify": "uglifyjs --comments --output public/beautify.min.js --compress -- node_modules/js-beautify/js/lib/beautify.js",
        "prewatch": "npm run build",
        "watch": "run-p --race --print-name watch:*",
        "watch:less": "chokidar less/**/*.less less/*.less -c 'npm run compile:css:app'",
        "watch:js": "chokidar '**/*.js' '*.js' -c 'npm run lint'",
        "watch:browser": "chokidar 'browser/**' -c 'run-p copy:browser compile:js:*'"
    },
    "dependencies": {
        "ace-builds": "^1.3.3",
        "async": "^2.6.1",
        "bootstrap": "^3.3.7",
        "bootstrap-table": "^1.12.1",
        "chalk": "~1.1",
        "cookie-parser": "^1.4.3",
        "express": "~3.4",
        "express-hbs": "0.8.x",
        "flot": "^0.8.0-alpha",
        "joi": "^13.4.0",
        "jquery": "^3.3.1",
        "js-beautify": "1.8.0",
        "jsonwebtoken": "^7.4.1",
        "moment": "~2.2",
        "morgan": "^1.9.0",
        "promise-polyfill": "^7.1.2",
        "request": "~2.27",
        "underscore": "~1.8",
        "uuid": "^3.2.1",
        "verror": "^1.10.0",
        "whatwg-fetch": "^2.0.4"
    },
    "devDependencies": {
        "chokidar-cli": "^1.2.0",
        "cross-var": "^1.1.0",
        "eslint": "^4.19.1",
        "less": "^2.7.3",
        "less-plugin-autoprefix": "^1.5.1",
        "less-plugin-clean-css": "^1.5.1",
        "lodash": "^4.17.10",
        "npm-run-all": "^4.1.3",
        "shx": "^0.2.2",
        "uglify-js": "^3.4.0"
    }
}
